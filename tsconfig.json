{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "incremental": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    // Just to focus on tests
    "noImplicitAny": false
  }
}
